{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm run dev",
      "name": "Start backend",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/backend"
    },
    {
      "command": "npm start",
      "name": "Start frontend",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/frontend"
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "c:/Users/tittu/AppData/Local/Microsoft/Windows/INetCache/IE/DTMFRV3N",
      "program": "c:/Users/tittu/AppData/Local/Microsoft/Windows/INetCache/IE/DTMFRV3N/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ],
  "compounds": [
    {
      "name": "start MERN app",
      "configurations": [
        "Start frontend",
        "Start backend"
      ]
    }
  ]
}